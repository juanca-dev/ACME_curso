@model Models.ACME.ArticuloEntidad

@{
    ViewData["Title"] = "BuscarxID";
}

<style>
    .btn img {
        width: 24px;
        height: auto; /* Esto mantiene la proporción de la imagen */
    }
</style>

<div class="card">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="col col-md-4">Requisición - Ver detalle</h5>
            <nav class="navbar">
                <div class="container justify-content-end">
                    <div class="btn-group" role="group" aria-label="Barra de herramientas">
                        <!-- Botón: Ir al primer registro -->
                        <a class="btn btn-primary" asp-action="BuscarxID" asp-route-IDArticulo="@ViewBag.Inicio" title="Ir al primer registro">
                            <i class="bi bi-skip-backward-fill"></i>
                        </a>

                        <!-- Botón: Ir al registro anterior -->
                        <a class="btn btn-primary" asp-action="BuscarxID" asp-route-IDArticulo="@ViewBag.Anterior" title="Ir al registro anterior">
                            <i class="bi bi-caret-left-fill"></i>
                        </a>

                        <!-- Botón: Ir al siguiente registro -->
                        <a class="btn btn-primary" asp-action="BuscarxID" asp-route-IDArticulo="@ViewBag.Siguiente" title="Ir al siguiente registro">
                            <i class="bi bi-caret-right-fill"></i>
                        </a>

                        <!-- Botón: Ir al último registro -->
                        <a class="btn btn-primary" asp-action="BuscarxID" asp-route-IDArticulo="@ViewBag.Fin" title="Ir al último registro">
                            <i class="bi bi-skip-forward-fill"></i>
                        </a>

                        <!-- Botón: Editar -->
                        <a class="btn btn-dark" asp-action="Modificar" asp-route-IDArticulo="@Model.IDArticulo" title="Modificar registro">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <!-- Botón: Anular -->
                        <a class="btn btn-danger" asp-action="Anular" asp-route-IDArticulo="@Model.IDArticulo" title="Anular registro">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="card-body">
        <div>
            <!-- Campos del formulario -->
            
<div class="row mb-3">
<div class="col-md-4">
        <label asp-for="IDArticulo" class="col-sm-4 col-form-label">@Html.DisplayNameFor(model => Model.IDArticulo)</label>
        <input type="number" min="0" class="form-control" asp-for="IDArticulo" disabled  #VALORPREDETERMINADO# />
        <span asp-validation-for="IDArticulo" class="text-danger"></span>
    </div>
		<div class="col-md-4">
        <label asp-for="IDUnidadMedida" class="col-sm-4 col-form-label">@Html.DisplayNameFor(model => Model.IDUnidadMedida)</label>
            @Html.DropDownList("IDUnidadMedida", ViewBag.ListaUnidadMedidaEntidad0 as SelectList, "Seleccione un tipo", new { @class = "form-select form-select-md mb-3" , @disabled = "disabled" })
            <span asp-validation-for="IDUnidadMedida" class="text-danger"></span>
    </div>
		<div class="col-md-4">
        <label asp-for="Articulo" class="col-sm-4 col-form-label">@Html.DisplayNameFor(model => Model.Articulo)</label>
        <input type="text" class="form-control" asp-for="Articulo" disabled  #VALORPREDETERMINADO# />
        <span asp-validation-for="Articulo" class="text-danger"></span>
    </div>
</div>

<div class="row mb-3">

		<div class="col-md-4">
        <label asp-for="Precio" class="col-sm-4 col-form-label">@Html.DisplayNameFor(model => Model.Precio)</label>
        <input type="number" min="0" class="form-control" asp-for="Precio" disabled  #VALORPREDETERMINADO# />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
		<div class="col-md-4">
        <label asp-for="StockActual" class="col-sm-4 col-form-label">@Html.DisplayNameFor(model => Model.StockActual)</label>
        <input type="number" min="0" class="form-control" asp-for="StockActual" disabled  #VALORPREDETERMINADO# />
        <span asp-validation-for="StockActual" class="text-danger"></span>
    </div>
		<div class="col-md-4">
        <label class="col-sm-4 col-form-label" asp-for="Activo">@Html.DisplayNameFor(model => Model.Activo)</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Activo" disabled  >
        </div>
    </div>
</div>


            <div class="row">
                <div class="col-4">
                    <a asp-action="IndexPaginado" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>


