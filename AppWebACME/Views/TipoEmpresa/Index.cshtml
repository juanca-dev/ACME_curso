@model List<Models.ACME.TipoEmpresaEntidad>

@{
    ViewData["Title"] = "TipoEmpresa";
}

<style>
    .btn img {
        width: 24px;
        height: auto; /* Esto mantiene la proporción de la imagen */
    }
</style>

<h5>TipoEmpresa</h5>
<div class="container">
    <h6>Lista de TipoEmpresa</h6>
    <div class="d-flex justify-content-end">
        <a asp-action="Crear" class="btn btn-outline-light btn-sm">
            <img src="~/images/nuevo01.png" alt="Nuevo" title="Agregar Nuevo" />
        </a>
    </div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
		        <th scope="col" style="text-align: center;">@Html.DisplayNameFor(model => Model.ElementAt(0).IDTipoEmpresa)</th>
		<th scope="col" style="text-align: center;">@Html.DisplayNameFor(model => Model.ElementAt(0).TipoEmpresa)</th>
		<th scope="col" style="text-align: center;">@Html.DisplayNameFor(model => Model.ElementAt(0).Descripcion)</th>
		<th scope="col" style="text-align: center;">@Html.DisplayNameFor(model => Model.ElementAt(0).Sigla)</th>
		<th scope="col" style="text-align: center;">@Html.DisplayNameFor(model => Model.ElementAt(0).Activo)</th>
                
                <th scope="col" style="text-align: center;" class="col-1">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoEmpresaEntidad in Model)
            {
                <tr>
		            <th scope="row" style="text-align: center;">@tipoEmpresaEntidad.IDTipoEmpresa</th>
			<td>@tipoEmpresaEntidad.TipoEmpresa</td>
			<td>@tipoEmpresaEntidad.Descripcion</td>
			<td>@tipoEmpresaEntidad.Sigla</td>
			@{
                        string activoActivo = string.Empty;
                        if (tipoEmpresaEntidad?.Activo == true)
                        {
                            activoActivo = "checked";
                        }
                        else
                        {
                            activoActivo = string.Empty;
                        }
                    }
                    <td class="text-center align-middle"><input class="form-check-input" type="checkbox" disabled @activoActivo></td>
                    
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Seleccionar
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>
                                    <a class="dropdown-item" asp-route-controller="TipoEmpresa" asp-route-action="BuscarxID" asp-route-IDTipoEmpresa="@tipoEmpresaEntidad.IDTipoEmpresa">
                                        <i class="bi bi-search"></i> Ver detalle
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-route-controller="TipoEmpresa" asp-route-action="Modificar" asp-route-IDTipoEmpresa="@tipoEmpresaEntidad.IDTipoEmpresa">
                                        <i class="bi bi-pencil-square"></i> Modificar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-route-controller="TipoEmpresa" asp-route-action="Anular" asp-route-IDTipoEmpresa="@tipoEmpresaEntidad.IDTipoEmpresa">
                                        <i class="bi bi-trash"></i> Anular
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>